# OpenWeatherMap API Key (get from https://openweathermap.org/api)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# AI Provider Configuration
# Choose: "gemini" (FREE) or "anthropic" (paid, $5 free credits)
AI_PROVIDER=gemini

# Google Gemini API Key (get from https://makersuite.google.com/app/apikey - FREE tier!)
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic API Key (get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# MCP Server Authentication (Optional)
# ============================================================================
# Secure your MCP server with API key authentication.
# Leave empty to disable authentication (useful for local development).

# SERVER SIDE: Valid API keys that can access the server (comma-separated)
# Generate a key: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Example: MCP_SERVER_API_KEYS=key1,key2,key3
MCP_SERVER_API_KEYS=

# CLIENT SIDE: API key to send when connecting to server
# Must match one of the keys in MCP_SERVER_API_KEYS
MCP_CLIENT_API_KEY=
